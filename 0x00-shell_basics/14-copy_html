#!/bin/bash

# Set the source and destination directories
source_dir=$(pwd)
destination_dir=$(dirname $")

# Loop through each HTML file in the source directory
for file in "$source_dir"/*.html
do
    # Get the filename without the path
    file_name=$(basename "$file")
    
    # Check if the file exists in the destination directory
    if [ ! -f "$destination_dir/$file_name" ]
    then
        # If the file doesn't exist, copy it to the destination directory
        cp "$file" "$destination_dir" &&
        echo "Copied $file_name to $destination_dir"
    else
        # Check if the file in the source directory is newer than in the destination directory
        if [ "$file" -nt "$destination_dir/$file_name" ]
        then
            # If the file is newer, copy it to the destination directory
            cp "$file" "$destination_dir" &&
            echo "Updated $file_name in $destination_dir"
        fi
    fi
done

echo "All HTML files copied or updated"
